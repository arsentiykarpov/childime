<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">#2C2F35</item>           
        <item name="colorPrimaryVariant">#1E2125</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        
        <item name="colorSecondary">#D68F2B</item>         
        <item name="colorOnSecondary">#1F1F1F</item>

        
        <item name="android:colorBackground">#F5F5F7</item>  
        <item name="colorSurface">#FFFFFF</item>             
        <item name="colorOnSurface">#2A2C2F</item>

        
        <item name="colorError">#D5393B</item>              
        <item name="colorOnError">#FFFFFF</item>

        
        <item name="materialCardViewStyle">@style/AppCard</item>
        <item name="materialButtonStyle">@style/AppButton</item>

    </style>


    
    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">1dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#D9D9DE</item>    
        <item name="cardUseCompatPadding">true</item>
    </style>


    
    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>

